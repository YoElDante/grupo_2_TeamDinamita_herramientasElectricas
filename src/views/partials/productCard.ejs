<article class="tarjeta product">
  <a href="/product/detail/<%= product.id%>">

    <h4>
      <%=product.name%>
    </h4>

    <div class="imgProducto">
      <img src="/img/products/<%=product.image[0]%>" alt="Imagen de <%=product.name%>">
    </div>

    <div class="detalles">
      <p class="marca">
        <%=product.brand%>
      </p>
      <p class="modelo">
        <%=product.model%>
      </p>
    </div>

    <i class="fa-solid fa-tags"></i>

    <div class="precios">
      <p class="precioAnterior">$ <%=product.price%>.-</p>
      <p class="precioActual">$ <%= product.price%>.-</p>
    </div>

  </a>
</article>